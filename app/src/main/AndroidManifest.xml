<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.iesfranciscodelosrios.algarrido.wolfrol">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".views.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.AyudaActivity"
            android:label="@string/title_activity_ayuda"
            android:parentActivityName=".views.ListadoActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".views.BuscarActivity"
            android:label="@string/title_activity_buscar"
            android:parentActivityName=".views.ListadoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.SobreMiActivity"
            android:label="@string/title_activity_sobre_mi"
            android:parentActivityName=".views.ListadoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.FormularioActivity"
            android:label="@string/title_activity_formulario"
            android:parentActivityName=".views.ListadoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.ListadoActivity"
            android:label="@string/title_activity_listado"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.LogoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>